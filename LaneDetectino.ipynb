   "source": [
    "import cv2\n",
    "import numpy as np\n",
    "\n",
    "def main():\n",
    "  
    "    cap = cv2.VideoCapture('C:\\\\Users\\\\ethan\\\\Downloads\\\\LaneVideo.mp4')\n",
    "\n",
    "   
    "    ww, hh = 640, 400\n",
    "    # rh: ROI 高度比例, r: 用於繪製邊界參考值\n",
    "    rh, r = 0.6, 3\n",
    "\n",
    "  
    "    xx1, yy1 = int(ww * 0.4), int(hh * rh)\n",
    "    xx2, yy2 = int(ww * 0.6), int(hh * rh)\n",
    "    p1, p2 = [r, hh - r], [ww - r, hh - r]  # 底部左右點\n",
    "    p3, p4 = [xx2, yy1], [xx1, yy2]           # 上方兩點\n",
    "\n",
    "   
    "    HOUGH_THRESHOLD = 40\n",
    "    HOUGH_MIN_LINE_LENGTH = 15\n",
    "    HOUGH_MAX_LINE_GAP = 70\n",
    "\n"
    "    lane_width = 300  # 依據實際車道寬度調整\n",
    "    lane_left_bound = int(ww / 2 - lane_width / 2)\n",
    "    lane_right_bound = int(ww / 2 + lane_width / 2)\n",
    "\n",
    "    prev_left_x_bottom = None\n",
    "    prev_left_x_top = None\n",
    "    alpha = 0.8\n",
    "    threshold = 20\n",
    "\n",
    "    while True:\n",
    "        ret, frame = cap.read()\n",
    "        if not ret:\n",
    "            break\n",
    "\n",
    "        img1 = cv2.resize(frame, (ww, hh))\n",
    "\n",
    "        gray = cv2.cvtColor(img1, cv2.COLOR_BGR2GRAY)\n",
    "        kernel = cv2.getStructuringElement(cv2.MORPH_RECT, (5, 5))\n",
    "        dilated = cv2.dilate(gray, kernel)\n",
    "        blurred = cv2.GaussianBlur(dilated, (5, 5), 0)\n",
    "        eroded = cv2.erode(blurred, kernel)\n",
    "        edges = cv2.Canny(eroded, 150, 200)\n",
    "\n",
    "        mask_zone = np.zeros((hh, ww), dtype=np.uint8)\n",
    "        roi_points = np.array([p1, p2, p3, p4])\n",
    "        cv2.fillPoly(mask_zone, [roi_points], 255)\n",
    "        edges_roi = cv2.bitwise_and(edges, mask_zone)\n",
    "\n",
    "        lines = cv2.HoughLinesP(edges_roi, 1, np.pi/180,\n",
    "                                HOUGH_THRESHOLD, \n",
    "                                None, \n",
    "                                HOUGH_MIN_LINE_LENGTH, \n",
    "                                HOUGH_MAX_LINE_GAP)\n",
    "\n"
    "        left_s, left_b = 0, 0\n",
    "        right_s, right_b = 0, 0\n",
    "        found_left = False\n",
    "        found_right = False\n",
    "\n",
    "        if lines is not None:\n",
    "            for line in lines:\n",
    "                x1, y1, x2, y2 = line[0]\n",
    "                s = (y2 - y1) / (x2 - x1 + 1e-6)\n",
    "                b = y1 - s * x1\n",
    "\n",
    "                if min(x1, x2) < 30 or max(x1, x2) > ww - 30:\n",
    "                    continue\n",
    "\n",
    "                if s < 0:\n",
    "                    if not found_left or s < left_s:\n",
    "                        left_s, left_b = s, b\n",
    "                        found_left = True\n",
    "                elif s > 0:\n",
    "                    if not found_right or s > right_s:\n",
    "                        right_s, right_b = s, b\n",
    "                        found_right = True\n",
    "\n",
    "        img2 = img1.copy()\n",
    "\n",
    "        if found_left and found_right:\n",
    "            y_bottom = hh - r\n",
    "            y_top = hh - int(hh * 0.175)\n",
    "            \n",
    "            left_x_bottom = int((y_bottom - left_b) / left_s)\n",
    "            left_x_top    = int((y_top - left_b) / left_s)\n",
    "            right_x_bottom = int((y_bottom - right_b) / right_s)\n",
    "            right_x_top    = int((y_top - right_b) / right_s)\n",
    "            \n",
    "            left_x_bottom = min(max(left_x_bottom, lane_left_bound), ww//2)\n",
    "            left_x_top    = min(max(left_x_top, lane_left_bound), ww//2)\n",
    "            right_x_bottom = max(min(right_x_bottom, lane_right_bound), ww//2)\n",
    "            right_x_top    = max(min(right_x_top, lane_right_bound), ww//2)\n",
    "            \n",
    "            if prev_left_x_bottom is not None:\n",
    "                if abs(left_x_bottom - prev_left_x_bottom) > threshold:\n",
    "                    left_x_bottom = prev_left_x_bottom\n",
    "                else:\n",
    "                    left_x_bottom = int(alpha * left_x_bottom + (1 - alpha) * prev_left_x_bottom)\n",
    "                    \n",
    "                if abs(left_x_top - prev_left_x_top) > threshold:\n",
    "                    left_x_top = prev_left_x_top\n",
    "                else:\n",
    "                    left_x_top = int(alpha * left_x_top + (1 - alpha) * prev_left_x_top)\n",
    "                    \n",
    "            prev_left_x_bottom = left_x_bottom\n",
    "            prev_left_x_top = left_x_top\n",
    "\n",
    "            cv2.line(img2, (left_x_bottom, y_bottom), (left_x_top, y_top), (0, 255, 0), 3)\n",
    "            cv2.line(img2, (right_x_bottom, y_bottom), (right_x_top, y_top), (0, 255, 0), 3)\n",
    "\n",
    "        cv2.imshow('Lane Detection', img2)\n",
    "        if cv2.waitKey(1) & 0xFF == ord('q'):\n",
    "            break\n",
    "\n",
    "    cap.release()\n",
    "    cv2.destroyAllWindows()\n",
    "\n",
    "if __name__ == '__main__':\n",
    "    main()\n"
   ]
